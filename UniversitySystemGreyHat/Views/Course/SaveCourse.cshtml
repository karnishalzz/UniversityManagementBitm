@model UniversitySystemGreyHat.Models.Course

@{
    Layout = null;
    List<SelectListItem> departments = ViewBag.departments;
    List<SelectListItem> semesters = ViewBag.semesters;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/StyleSheet/Nav.css" rel="stylesheet" />
    <style>
        .field-validation-error {
            color: red;
            font-family: 'Abel', sans-serif;
            font-size: 18px;
        }
        * {
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
        }
        ::-webkit-input-placeholder {
            color: #000;
            font-size: 16px;
            letter-spacing: 2px;
            padding-left: 10px;
        }

        #CourseTable {
            margin-left: 30%;
            margin-top: 8%;
        }

            #CourseTable td {
                width: 150px;
            }

            #CourseTable tr {
                height: 50px;
            }

        .code {
            width: 300px;
            height: 35px;
            border: none;
            color: #000;
            padding-left: 5px;
            border-radius: 10px;
            border: 1px solid #0078ff;
            font-family: 'abel', sans-serif;
            font-size: 16px;
        }

        .name {
            width: 300px;
            height: 35px;
            border: none;
            color: #000;
            padding-left: 5px;
            border-radius: 10px;
            border: 1px solid #0078ff;
            font-family: 'abel', sans-serif;
            font-size: 16px;
        }

        .credit {
            width: 300px;
            height: 35px;
            border: none;
            color: #000;
            padding-left: 5px;
            border-radius: 10px;
            border: 1px solid #0078ff;
            font-family: 'abel', sans-serif;
            font-size: 16px;
        }

        .description {
            width: 300px;
            height: 60px;
            border: none;
            color: #000;
            padding-left: 5px;
            border-radius: 10px;
            border: 1px solid #0078ff;
            font-family: 'abel', sans-serif;
            font-size: 16px;
        }

        .department {
            width: 300px;
            height: 35px;
            border: none;
            color: #000;
            padding-left: 5px;
            border-radius: 10px;
            border: 1px solid #0078ff;
            font-family: 'abel', sans-serif;
            font-size: 16px;
        }

        .semester {
            width: 300px;
            height: 35px;
            border: none;
            color: #000;
            padding-left: 5px;
            border-radius: 10px;
            border: 1px solid #0078ff;
            font-family: 'abel', sans-serif;
            font-size: 16px;
        }

        .save {
            margin-top: 10px;
            margin-left: 64%;
            height: 36px;
            width: 100px;
            background: dodgerblue;
            color: #fff;
            border: none;
            border: 1px solid black;
            border-radius: 6px;
            font-family: 'Abel';
            letter-spacing: .2em;
            font-size: 18px;
            font-weight: bold;
            text-align: center;
        }

            .save:hover {
                background-color: #0078ff;
            }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Save Course</title>
    <link rel="shortcut icon" type="/images/ico" href="/images/varsity.ico" />
</head>
<body>
    <div class="header" id="home">
        <nav>
            <div class="logo">University Management</div>
            <ul>
                <li>
                    <a href="#">Department</a>
                    <ul>
                        <li style="height: 40px;"><a href='@Url.Action("Save", "Department")'>Save Department</a></li>
                        <li style="height: 55px;"><a href='@Url.Action("GetAllDepartments", "Department")'>View Departments</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">Course</a>
                    <ul>
                        <li style="height: 35px;"><a href='@Url.Action("SaveCourse", "Course")'>Save Course</a></li>
                        <li style="height: 40px;"><a href='@Url.Action("Save", "AssignCourseToTeacher")'>Assign Course</a></li>
                        <li style="height: 35px;"><a href='@Url.Action("CourseStatistics", "AssignCourseToTeacher")'>View Course Statics</a></li>
                        <li style="height: 45px;"><a href='@Url.Action("Save", "EnrollCourse")'>Enroll Course</a></li>
                    </ul>
                </li>
                <li><a href='@Url.Action("Save", "Teacher")'>Teacher</a></li>
                <li><a href='@Url.Action("Save", "RegisterStudent")'>Register Student</a></li>
                <li>
                    <a href="#">Allocate Class Room</a>
                    <ul>
                        <li style="height: 35px;"><a href='@Url.Action("Save", "ClassRoomAllocation")'>Class Room Allocation</a></li>
                        <li style="height: 50px;"><a href='@Url.Action("ViewClassSchedule", "ClassRoomAllocation")'>View Class Schedule</a></li>
  </ul>
                </li>
                <li>
                    <a href="#">Student Result</a>
                    <ul>
                        <li style="height: 35px;"><a href='@Url.Action("Save", "StudentResult")'>Save Student Result</a></li>
                        <li style="height: 50px;"><a href='@Url.Action("ViewResult", "StudentResult")'>View Result</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">Unassign</a>
                    <ul>
                        <li style="height: 35px;"><a href='@Url.Action("UnAllocate", "UnAllocate")'>Unassign Room</a></li>
                        <li style="height: 50px;"><a href='@Url.Action("Unassign", "UnassignCourses")'>Unassign Course</a></li>
                    </ul>
                </li>

                <li><a href='@Url.Action("Login", "Login")'>Logout</a></li>

            </ul>

        </nav>
    </div>
<div>

    <form id="courseSaveForm" method="POST">
        <table id="CourseTable" style="font-family: 'Abel', sans-serif; font-size: 18px; margin-top: 10%;">
            <tr>
                <td>@Html.LabelFor(x => x.Code, "Course Code :", new {@class = "codeLabel"})</td>
                <td>
                    @Html.TextBoxFor(x => x.Code, new {@class = "code", @placeholder = "Enter Course Code"})
                    @Html.ValidationMessageFor(x => x.Code)
                </td>


            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.Name, "Course Name :", new {@class = "nameLabel"})</td>
                <td>
                    @Html.TextBoxFor(x => x.Name, new {@class = "name", @placeholder = "Enter Course Name"})
                    @Html.ValidationMessageFor(x => x.Name)
                </td>
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.Credit, "Credit :", new {@class = "creditLabel"})</td>
                <td>
                    @Html.TextBoxFor(x => x.Credit, new {@class = "credit", @placeholder = "Enter Course Credit"})
                    @Html.ValidationMessageFor(x => x.Credit)
                </td>
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.Description, "Description :", new {@class = "descriptionLabel"})</td>
                <td>
                    @Html.TextBoxFor(x => x.Description, new {@class = "description", @placeholder = "Enter Course Description"})
                    @Html.ValidationMessageFor(x => x.Description)
                </td>
            </tr>

            <tr>
                <td>@Html.LabelFor(x => x.DepartmentId, "Department Name :", new {@class = "departmentLabel"})</td>
                <td>
                    @Html.DropDownListFor(x => x.DepartmentId, new SelectList(departments, "Value", "Text"), new {@class = "department"})
                    @Html.ValidationMessageFor(x => x.DepartmentId)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(x => x.SemesterId, "Semester :", new {@class = "semesterLabel"})</td>
                <td>
                    @Html.DropDownListFor(x => x.SemesterId, new SelectList(semesters, "Value", "Text"), new {@class = "semester"})
                    @Html.ValidationMessageFor(x => x.SemesterId)

                </td>
            </tr>

            <tr>
                <td></td>
                <td> <input type="submit" class="save" value="Save"/></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <label style="font-size: 18px; font-family: 'Abel', sans-serif;">@ViewBag.Message</label>
                    }
                </td>
            </tr>
        </table>
        <script src="~/Scripts/jquery-1.12.4.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </form>
</div>
</body>
</html>
