        $('#DepartmentId').change(function() {


            if ($('#DepartmentId :selected').text() === "--Select a department--") {
                $("#RegistrationNo").hide();
            } else {
                $("#RegistrationNo").show();
            }
            var departmentCode = $('#DepartmentId :selected').text();
            var departmentId = $('#DepartmentId').val();


            var json = { department: departmentCode, departmentId: departmentId };


            $.ajax({
                type: "POST",

                url: '@Url.Action("GetCredit", "RegisterStudent")',


                contentType: "application/json; charset=utf-8",

                data: JSON.stringify(json),

                success: function(data) {
                    //$("#RegistrationNo").empty();


                    $("#RegistrationNo").val(data.RegistrationNo);

