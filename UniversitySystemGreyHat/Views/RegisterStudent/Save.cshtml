<div style="font-family: 'Abel', sans-serif; font-size: 18px;">

    <form method="POST" style="margin-top:10%;">
        <table id="studentTable">
           
          
            <tr>
                <td>@Html.Label("Name", "Name :")</td>
                <td>
                    @Html.TextBoxFor(x => x.Name, new { @class = "Name", @placeholder = "Enter Student Name" })
                    @Html.ValidationMessageFor(x => x.Name)





                </td>


            </tr>
            <tr>
                <td>@Html.Label("Email", "Email :")</td>
                <td>
                    @Html.TextBoxFor(x => x.Email, new { @class = "Email", @placeholder = "Enter Email" })

                    @Html.ValidationMessageFor(x => x.Email)




                </td>


            </tr>
            <tr>
                <td>@Html.Label("ContactNo", "Contact No :")</td>
                <td>
                    @Html.TextBoxFor(x => x.ContactNo, new { @class = "ContactNo", @placeholder = "Enter Contact No." })
                    @Html.ValidationMessageFor(x => x.ContactNo)





                </td>


            </tr>
            <tr>
                <td>@Html.Label("Date", "Date :")</td>
                <td>
                    @Html.TextBoxFor(x => x.Date, new { @class = "Date" })
                    @Html.ValidationMessageFor(x => x.Date)
                </td>


            </tr>
            <tr>
                <td>@Html.Label("Address", "Address :")</td>
                <td>
                    @Html.TextAreaFor(x => x.Address, 5, 30, new { @class = "Address", @placeholder = "Enter Address" })
                    @Html.ValidationMessageFor(x => x.Address)
                </td>


            </tr>
            <tr>
                <td>@Html.Label("DepartmentId", "Department Name :")</td>
                <td>
                    @Html.DropDownListFor(x => x.DepartmentId, new SelectList(departmentList, "DepartmentId", "DepartmentCode"), "--Select a department--", new { @class = "Department" })


                    @Html.ValidationMessageFor(x => x.DepartmentId)

                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("RegistrationNo", "Registration No. :")
                </td>

                <td>
                    @Html.TextBoxFor(x => x.RegistrationNo, new { @class = "RegistrationNo", @placeholder = "Enter Registration No.", @readonly = "readOnly" })

                    @Html.ValidationMessageFor(x => x.RegistrationNo)


                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" id="save" name="save" value="Submit" />
                </td>
            </tr>


            <tr>
                <td></td>
                <td>
                    @if (ViewBag.Save == "Save Successfully")
                    {
                        <label id="messageLabl" name="messageLabl" style="color: green; font-family: 'Abel', sans-serif; font-size: 18px;">@ViewBag.Save </label>



                    }
                    else
                    {
                        <label id="messageLabl" name="messageLabl" style="color: red; font-family: 'Abel', sans-serif; font-size: 18px;">@ViewBag.Save </label>

                    }
                </td>
            </tr>

        </table>

    </form>
